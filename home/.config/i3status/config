general {
        colors = true
        color_good = "#00FF00"
        color_degraded = "#FF8C00"
        color_bad = "#FF0000"

        interval = 5
}

#order += "ipv6"
order += "disk /home"
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless wlan0"
order += "ethernet eth0"
#order += "battery 1" 
#order += "cpu_temperature 0"
order += "cpu_usage"
#order += "load"
order += "time"

disk "/home" {
	format = "%avail / %total"
}

wireless wlan0 {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
	format_down = "E: down"
}

battery 1 {
        path = "/sys/class/power_supply/BAT%d"
        format = "%status %percentage %remaining"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

cpu_temperature 0 {
	format = "T: %degrees Â°C"
}

cpu_usage {
    format = "%usage"
}

load {
	format = "%1min"
}

time {
	format = "%a %d/%m/%Y %H:%M"
}
